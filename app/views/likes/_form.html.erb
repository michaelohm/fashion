<div>
	<% if current_user.likes.find_by_post_id(post.id) %>
	  <%= form_for [post, like], :method => :delete, remote: true do |f| %>
	  <%= f.submit "Unlike" %>
	  <% end %>
	<% else %>
	  <%= form_for [post, like], remote: true do |f| %>
	  	<%= f.hidden_field :post_id, :value => post.id %>
	    <%= f.submit "Like" %>
	  <% end %>
  <% end %>
</div>